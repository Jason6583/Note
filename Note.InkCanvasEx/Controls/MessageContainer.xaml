<UserControl x:Class="Note.InkCanvasEx.Controls.MessageContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Height="42" 
    MaxWidth="240">
    <Border MaxWidth="240" Height="42" 
            CornerRadius="21" 
            Background="Black" 
            HorizontalAlignment="Center">
        <TextBlock x:Name="txt" 
                   Margin="25, 0, 25, 0" 
                   FontSize="21" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Foreground="White"/>
    </Border>
</UserControl>
